@model CourseWork.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = @langResource["Registration"];
}

<h4>@langResource["Registration"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div>
                    <label asp-for="Email" class="control-label">Enter Email</label><br />
                    <input type="text" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" />
                </div>
                <div>
                    <label asp-for="Password" class="control-label">Enter password</label><br />
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" />
                </div>
                <div>
                    <label asp-for="ConfirmPassword" class="control-label">Enter password</label><br />
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" />
                </div>
                <p></p>
                <div class="form-group">
                    <input type="submit" value="@langResource["Registration"]" class="btn btn-outline-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
@Html.ValidationMessageFor(m => m.Email)
@Html.ValidationMessageFor(m => m.Password)
@Html.ValidationMessageFor(m => m.ConfirmPassword)
