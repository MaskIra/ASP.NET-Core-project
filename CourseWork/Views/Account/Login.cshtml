@model CourseWork.ViewModels.LoginViewModel

<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Enter Email</label>
                    <input type="text" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Enter password</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Enter" class="btn btn-outline-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
@Html.ValidationMessageFor(m => m.Email)
@Html.ValidationMessageFor(m => m.Password)
