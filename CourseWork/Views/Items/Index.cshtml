@model IEnumerable<CourseWork.Models.Item>

@{
    ViewData["Title"] = "Items";
}

<p>
    <a class="btn btn-primary" role="button" asp-action="Create" asp-route-id="3">Create New</a>
</p>
@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    @foreach (var field in ViewBag.FieldsCollection)
                    {
                        <th scope="col">
                            @field.Name
                        </th>
                    }
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        @foreach (var field in item.Fileds)
                        {
                            <td>
                                @if (field.Value.ToString() == "True" || field.Value.ToString() == "False")
                                {
                                    <input type="checkbox" disabled readonly class="form-control" @(field.Value.ToString() == "True" ? "checked" : "") />
                                }
                                else
                                {
                                    @field.Value
                                }
                            </td>
                        }
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
